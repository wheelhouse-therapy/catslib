function getEmails() {
	var list = document.querySelectorAll("input.email:checked ~ span");
	var out = [];
    for (var i = 0; i < list.length; i++) {
    	out.push(list[i].innerHTML);
    }
    return out.join(";");
}

function getSelected(type) {
    var list = document.querySelectorAll("input." + type + ":checked");
    var out = [];
    for (var i = 0; i < list.length; i++) {
        out.push(list[i].parentElement.parentElement.dataset.id);
    }
    return out;
}
function arrayChunk(array, size) {
	var out = [];
	var chunks = Math.floor(array.length / size);
	var leftover = array.length % size;
	for (var i = 0; i < chunks; i++) {
		out.push(array.splice(0, size));
	}
	if (leftover > 0) {
		out.push(array);
	}
	return out;
}
